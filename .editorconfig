root = true

[*]
indent_style = space
tab_width = 4
end_of_line = lf
max_line_length = 80
insert_final_newline = true
trim_trailing_whitespace = true

[*.{kt,kts}]
ktlint_standard_filename = off
max_line_length = off
ktlint_standard = disabled
ktlint_standard_final-newline = enabled
ktlint_standard_max-line-length = enabled
ktlint_standard_trim-trailing-whitespace = enabled
